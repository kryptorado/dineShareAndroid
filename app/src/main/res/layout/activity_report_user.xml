<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/reportUserTitle"
        android:layout_width="236dp"
        android:layout_height="58dp"
        android:layout_marginTop="96dp"
        android:text="Report User"
        android:textAlignment="center"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/report_yes"
        style="@style/RoundedButton"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="#FFFFFF"
        android:text="Yes"
        android:textColor="#000000"
        app:iconTint="#FFFEFE"
        app:layout_constraintBottom_toTopOf="@+id/profile_button_logout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/reportUserBlurb"
        app:layout_constraintVertical_chainStyle="packed"
        app:rippleColor="#C8C8C8"
        app:strokeColor="#000000"
        app:strokeWidth="2dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/report_cancel"
        style="@style/RoundedButton"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="#FFFFFF"
        android:text="CANCEL"
        android:textColor="#000000"
        app:iconTint="#FFFEFE"
        app:layout_constraintBottom_toTopOf="@+id/profile_button_logout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/report_yes"
        app:layout_constraintVertical_chainStyle="packed"
        app:rippleColor="#C8C8C8"
        app:strokeColor="#000000"
        app:strokeWidth="2dp" />

    <TextView
        android:id="@+id/reportUserBlurb"
        android:layout_width="223dp"
        android:layout_height="110dp"
        android:layout_marginTop="24dp"
        android:text="Are you sure you would like to report the following user?"
        android:textAlignment="center"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/reportUserTitle" />

</androidx.constraintlayout.widget.ConstraintLayout>