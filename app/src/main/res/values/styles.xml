<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MyTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <!-- border color -->
        <item name="boxStrokeColor">@drawable/text_input_black_stroke</item>
        <item name="boxStrokeWidth">2dp</item>
        <!-- The color of the label when it is collapsed and the text field is active -->
        <item name="hintTextColor">@color/material_on_primary_emphasis_high_type</item>
        <!-- The color of the label in all other text field states (such as resting and disabled) -->
        <item name="android:textColorHint">@color/material_on_primary_emphasis_high_type</item>
    </style>

    <style name="RoundedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="shapeAppearanceOverlay">@style/RoundedButtonAppearance</item>
    </style>
    <style name="RoundedButtonAppearance">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">6dp</item>
    </style>

    <style name="LoadingDialogTheme" parent="Widget.AppCompat.ProgressBar">
        <item name="background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>


</resources>